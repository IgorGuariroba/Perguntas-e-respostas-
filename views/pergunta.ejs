<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <%if (pergunta) { %>
        <div class="container">
            <hr>
            <h1><%= pergunta.titulo %></h1>
            <p><%= pergunta.descricao %></p>
            <hr>
            <h3>Responda</h3>
            <form method="POST" action="/salvarResposta">
                <label>Resposta</label>
                <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button type="submit" class="btn btn-success">Resposta</button>
            </form>
            <hr>
            <h3>Respostas</h3>
            <hr>
            <% respostas.forEach(resposta => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        <%= resposta.corpo %>
                    </div>
                </div>
           <% }) %>    
        </div>
    <% } %>
</body>
<%- include ('partials/footer.ejs') %>
